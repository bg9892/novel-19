<nav class="navbar is-black" role="navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="/">
      <img src="/assets/images/virus.png" width="30" height="30" alt="Novel-19 logo">
      <h1 class="is-size-4">Novel-19</h1>
    </a>
  </div>
  <div class="navbar-end">
    <div class="navbar-item">
      <div class="buttons">
        <button class="button is-primary homeButton" type="button">Home</button>
        <button class="button is-primary is-outlined logoutButton" type="button">Logout</button>
      </div>
    </div>
  </div>
