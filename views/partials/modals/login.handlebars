  {{!-- Modal to login. --}}
  <div class="modal" id="signInModal" style="z-index:2">
    <div class="modal-background"></div>
    <div class="modal-card">
      <header class="modal-card-head">
        <p class="modal-card-title">Sign In</p>
        <button class="delete deleteButton" aria-label="close"></button>
      </header>
      <section class="modal-card-body">
        <form id="login">
          <div class="field">
            <label for="loginUsername" class="label">Username</label>
            <div class="control">
              <input type="text" class="input" id="loginUsername" name="loginUsername">
            </div>
          </div>
          <div class="field">
            <label for="loginPassword" class="label">Password</label>
            <div class="control">
              <input type="password" class="input" id="loginPassword" name="loginPassword">
            </div>
          </div>
          <div class="control buttons is-centered">
            <button type="submit" class="button is-primary">Submit</button>
          </div>
        </form>
      </section>
    </div>
  </div>